<%- include('common/head') -%>
<%- include('common/back-sidebar', {title}); %>

<style>
  #content-wrraper {
    min-height: 90vh;
    display: flex;
    align-items: center;
  }

  .theme_btn_bg {
    background-color: #6e70d7 !important;
  }
</style>

<section class="loader-page" style="display: none;background: rgba(0,0,0,0.2) !important ;" id="loaderPage">
    <div class="spinner_flash"></div>
</section>


<div id="content-wrraper">
  <div class="container">
    <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
        <img src="views/images/sign-up.png" class="img-fluid" />
      </div>
      <div class="form-group with_icon">
        <div class="input_group mb-3">
          <input type="text" class="form-control" placeholder="Name">
          <div class="icon">
            <i class="ri-user-line"></i>
          </div>
        </div>
        <div class="input_group mb-3">
          <input type="text" class="form-control" placeholder="Email">
          <div class="icon">
            <i class="ri-mail-open-line"></i>
          </div>
        </div>
        <div class="input_group mb-3">
          <input type="text" class="form-control" placeholder="Phone number">
          <div class="icon">
            <i class="ri-phone-line"></i>
          </div>
        </div>
        <div class="input_group mb-3">
          <input type="text" class="form-control" placeholder="Password">
          <div class="icon">
            <i class="ri-key-2-line"></i>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <a href="javascript: void(0)" class="btn rounded-pill w-75 p-3 d-block btn-primary theme_btn_bg login_success">Sign Up</a>
        </div>
        <p class="mt-3 fs-small text-center"><small>Already have an account? <a class="text-decoration-none text-primary" href="/login">Login</a></small></p>

      </div>
    </div>
  </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
$(document).on('click', '.login_success', function() {
    $('#loaderPage').fadeIn(300);
    setTimeout(() => {
      window.location.assign('/verify-login-otp');
    }, 2000);
  });
  </script>