<%- include('common/head') -%>

<style>
  #wrapper,
  #content {
    /* min-height: 100vh; */
  }

  .overlay {
    width: 100vw;
    height: 80vh;
    position: fixed;
    z-index: 102;
  }

  .theme_btn_bg {
    background-color: #6e70d7 !important;
  }

  .icon_align {
    position: relative;
    top: 3px;
  }
</style>

<body class="bg-white d-flex" style="min-height: 100vh;max-width: 100vw;overflow: hidden;">

  <section class="loader-page" style="display: none;background: rgba(0,0,0,0.2) !important ;" id="loaderPage">
    <div class="spinner_flash"></div>
  </section>
  <div class="overlay"></div>
  <div id="wrapper" class="bg-white mt-4">
    <div id="content">
      <section class="un-page-components">
        <div class="un-title-default"></div>

        <div class="content-comp p-0">
          <div class="bg-white pt-3 pb-5">
            <div class="un-block-cards">
              <div class="swiper LoginSwiper" style="overflow: visible !important;">
                <div class="swiper-wrapper">
                  <div class="swiper-slide">
                    <a class="item-card-nft --swiper" style="position: relative;top: -12vh;">
                      <picture class="swirl_image" style="display: none;">
                        <source srcset="views/images/logo.png" type="image/webp">
                        <img class="big-image" src="views/images/logo.png" alt="">
                      </picture>
                      <div class="un-info-card bg-none mt-5 shadow-none" style="display: none;" id="on_load_pop">
                        <h1 class="display-1 w-100 text-dark app_title_font text-center">
                          Hello English
                        </h1>
                      </div>
                    </a>
                  </div>

                  <div class="swiper-slide">
                    <div class="card border-0">
                      <img class="img-fluid" src="views/images/step-2.png" style="object-fit: contain;" id="step_2_img" alt="">
                      <h1 class="mt-4">Your growth is in your hand</h1>
                      <p>Get access to the best Online Courses & Community for Creative</p>
                    </div>
                  </div>

                  <div class="swiper-slide" style="position: relative;top: -5vh;">
                    <div class="card border-0">
                      <h1 class="mb-0">Sign in your account</h1>
                      <div class="text-center">
                        <img class="img-fluid w-75 py-5" src="views/images/sing-in.png" style="object-fit: contain;" id="step_2_img" alt="">
                      </div>
                      <div class="form-group with_icon">
                        <div class="input_group mb-3">
                          <input type="text" class="form-control" placeholder="Email">
                          <div class="icon">
                            <i class="ri-mail-open-line"></i>
                          </div>
                        </div>
                        <div class="input_group mb-3">
                          <input type="text" class="form-control" placeholder="Password">
                          <div class="icon">
                            <i class="ri-key-2-line"></i>
                          </div>
                        </div>
                        <div class="d-flex justify-content-center">
                          <a href="javascript: void(0)" class="btn rounded-pill w-75 p-3 d-block btn-primary theme_btn_bg login_success">Login</a>
                        </div>
                        <p class="mt-2 fs-small"><small>Don't have an account? <a class="text-decoration-none text-primary" href="/sign-up">Sign Up</a></small></p>
                        <hr />
                        <button class="btn btn-light mb-2 login_success"><img src="views/images/icons/google.svg" > Continue with Google</button>
                        <button class="btn btn-primary pt-0 login_success"><i class="fs-5 ri-facebook-circle-fill icon_align text-white "></i> Continue with Facebook</button>
                      </div>
                    </div>
                  </div>


                </div>
                <div class="swiper-pagination" style="display:none;position: fixed;bottom: 10vh;"></div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    <div style="display: none;" id="next_btn_div">
      <div class="d-flex px-4 justify-content-between align-items-center w-100" style="position: fixed;bottom: 10px;">
        <a class="text-decoration-none text-dark" id="skip_all_steps">Skip</a>
        <button class="btn effect-click btn-md-size bg-purple text-white rounded-pill theme_btn_bg" id="slide_to_next">Next</button>
      </div>
    </div>
  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="views/assets/vendors/swiper/swiper-bundle.min.js"></script>
  <script src="views/assets/js/custom.js"></script>

  <script src="views/assets/js/pwa-services.js"></script>
  <script>
    const LoginSwiper = new Swiper('.LoginSwiper', {
      // Optional parameters
      direction: 'horizontal',
      loop: true,
      shadow: false,
      spaceBetween: 30,
      // And if we need scrollbar
      pagination: {
        el: ".swiper-pagination",
      },
    });
    $(document).ready(function() {
      setTimeout(() => {
        $('.swirl_image').fadeIn(1000, () => {
          $('#on_load_pop').addClass('pop-in-component');
          setTimeout(() => {
            LoginSwiper.slideNext();
            $('#step_2_img,.swiper-pagination,#next_btn_div').fadeIn(1300);
          }, 2000);
        });
      }, 200);

      $(document).on('click', '#slide_to_next,#skip_all_steps', function() {
        LoginSwiper.slideNext();
        $('.overlay').hide();
        $('.swiper-pagination,#next_btn_div').fadeOut(300);
      });
    });

    $(document).on('click', '.login_success', function() {
      $('#loaderPage').fadeIn(300);
      setTimeout(() => {
        window.location.assign('/');
      }, 2000);
    });
  </script>
</body>

</html>